<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body>

<% if ( userinfo.id === undefined){ %>
<h2>You are not logged in. Please <a href="/login">login</a></h2> <h2>or<a href="/register">register</a></h2>

<% } else { %>

  <header>
    <% include ./partials/_header %>
  </header>

  <h4> <% "You are logged in as" + userinfo.email %>

  <h1> URLS </h1>


    <% for (let list in url) { %>
    <tr>
        <td> <%= "Short URL"  + url[list].shortURL + ": Long URL" + url[list].longURL  %> </td>
         <td><form method="GET" action="/urls/<%= list %>"><input type="submit" value="Edit"></form></td>
         <td><form method="POST" action="/urls/<%= list %>/delete"><input type="submit" value="Delete"></form></td>
    </tr>
    <% } %>

  <% } %>

</body>

